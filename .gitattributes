# ✅ Explicitly mark JavaScript as detectable (main logic)
*.js linguist-detectable=true

# ✅ Keep only one CSS file detectable (minimal influence)
style.css linguist-detectable=true

# ❌ Ignore all other .css files (like reset.css, theme.css etc.)
*.css linguist-detectable=false

# ❌ Ignore minified JS (not used but future-proofing)
*.min.js linguist-detectable=false
